{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "compile",
    "paths": {
      "@common/*": ["src/common/*"],
      "@components/*": ["src/components/*"],
      "@helpers": ["src/helpers"],
      "@utils": ["src/utils"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  }
}
